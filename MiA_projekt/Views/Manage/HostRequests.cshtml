@model IEnumerable<HostRequestsVM>

<h2>Host request</h2>
<div>
    <h4>Application</h4>
    <hr />
    <div class="hotel-description-div">
        <dl class="dl-horizontal">
            @foreach (var request in Model)
            {
                <div data-id="@request.Id">
                    <h3>@request.Name</h3>
                    <dt>Personal ID: </dt>
                    <dd style="color:white">@request.PersonalId</dd>
                    <dt>Document ID: </dt>
                    <dd style="color:white">@request.DocumentId</dd>
                    <dt>Image: </dt>
                    <dd>
                        <div class="left_img">
                            <img class="imag" src="@request.Image" />
                        </div>
                    </dd>
                    <button id="clearBtn" class="btn btn-primary" onclick="onBtnClAcc(@request.Id)" style="margin-left:10px; margin-top:10px">Accept</button>
                    <button id="clearBtn" class="btn btn-primary" onclick="onBtnClRem(@request.Id)" style="margin-left:10px; margin-top:10px">Remove</button>
                    <br />
                    <hr />
                </div>
            }
        </dl>
    </div>
</div>


@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert-dev.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

    <script>

        function onBtnClRem(id) {
            swal({
                title: "Confirmation required!",
                text: "Are you sure you want to remove the request?" /*+ button.attr("data-id") + "?"*/,
                //type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Yes, remove it!",
                cancelButtonText: "No"
            },
                function (isConfirm) {
                    if (isConfirm) {
                        $.ajax({
                            url: '/api/hostrequests/' + id,
                            type: 'DELETE',
                            contentType: 'application/json; charset=utf-8',
                            success: function () {
                                var tmp = $("div[data-id=" + id + "]");
                                tmp.remove();
                                toastr.success("Offer has been removed");
                                table.ajax.reload();
                            },
                            error: function () {
                                toastr.error("Error removing offer");
                            }
                        });
                    }
                })
        }

        function onBtnClAcc(id) {
            swal({
                title: "Confirmation required!",
                text: "Are you sure you want to accept the request?" /*+ button.attr("data-id") + "?"*/,
                //type: "warning",
                showCancelButton: true,
                confirmButtonColor: "green",
                confirmButtonText: "Yes, remove it!",
                cancelButtonText: "No"
            },
                function (isConfirm) {
                    if (isConfirm) {
                        $.ajax({
                            url: '/api/hostrequests/' + id,
                            type: 'POST',
                            contentType: 'application/json; charset=utf-8',
                            success: function () {
                                var tmp = $("div[data-id=" + id + "]");
                                tmp.remove();
                                toastr.success("Offer has been removed");
                                table.ajax.reload();
                            },
                            error: function () {
                                toastr.error("Error removing offer");
                            }
                        });
                    }
                })
        }
    </script>
}

@section Styles{
    <link rel='stylesheet' type='text/css' href='https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.css' />
    <link rel='stylesheet' type='text/css' href='https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.css' />
}
