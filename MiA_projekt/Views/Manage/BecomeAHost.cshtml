@model BecomeAHostVM
@{
    ViewData["Title"] = "Become a Host";
}


<h2>@ViewData["Title"]</h2>

<form asp-action="BecomeAHost">
    <div class="form-horizontal">
        <h4>Apply</h4>
        <hr />
        <div class="hotel-description-div">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pesel" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Pesel" class="form-control" />
                    <span asp-validation-for="Pesel" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <section class="contentButton">
                        <div class="Search">
                            <button type="submit" class="button">Submit</button>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {
@{ 
        await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

