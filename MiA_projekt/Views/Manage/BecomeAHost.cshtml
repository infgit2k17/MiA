@model BecomeAHostVM
@{
    ViewData["Title"] = "Become a Host";
}


<h2>@ViewData["Title"]</h2>

<form asp-action="BecomeAHost" asp-controller="Manage" method="post" class="form-horizontal">
    <div class="form-horizontal">
        <h4>Apply</h4>
        <hr />
        <div class="hotel-description-div">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pesel" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Pesel" class="form-control" />
                    <span asp-validation-for="Pesel" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="IDnumber" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="IDnumber" class="form-control" />
                    <span asp-validation-for="IDnumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="file" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="file" id="file-demo" type="file" class="file" multiple showUpload="false" data-preview-file-type="any" accept="image/x-png,image/gif,image/jpeg">
                    <span asp-validation-for="file" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <section class="contentButton">
                        <div class="Search">
                            <button type="submit" class="button">Submit</button>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="~/js/fileinput.js"></script>
}


@section Styles{
    <link rel='stylesheet' type='text/css' href='~/css/fileinput.css' />
}
