            function onBtnCl(id) {
                swal({
                    title: "Confirmation required!",
                    text: "Are you sure you want to remove the offer?" /*+ button.attr("data-id") + "?"*/,
                    //type: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#DD6B55",
