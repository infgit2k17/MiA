                                    Pytanie czy juz jest hostem czy nie
            @if (Model.HasPassword)
        {
            <a asp-controller="Manage" asp-action="ChangePassword" class="btn-bracketed">Change</a>
        }
        else
        {
            <a asp-controller="Manage" asp-action="SetPassword" class="btn-bracketed">Apply</a>
        }
                                *@
