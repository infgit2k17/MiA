@model IEnumerable<MyOrderVM>
@{
    ViewData["Title"] = "My orders";
}

<h2>@ViewData["Title"]</h2>
<div>
    <h4>List of yours orders</h4>
    <hr />
    <div class="hotel-description-div">
        <dl class="dl-horizontal">
            @foreach (var aparment in Model)
            {
                <div data-id="@aparment.Id">
                    <h3>@aparment.Name</h3>
                    <dt>Description: </dt>
                    <dd style="color:white">@aparment.Description</dd>
                    <dt>Address: </dt>
                    <dd style="color:white">@aparment.Street, @aparment.City, @aparment.PostalCode</dd>
                    <dt>Host: </dt>
                    <dd style="color:white"> @aparment.HostName @aparment.HostSurname</dd>
                    <dt>Phone number: </dt>
                    <dd style="color:white"> @aparment.PhoneNumber</dd>
                    @if (aparment.Comment==null)
                    {
                        <dd>
                            <dt>Comment: </dt>
                            <form asp-action="MyOrders" asp-controller="Manage" method="post" class="form-horizontal">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="col-md-10">
                                    <textarea asp-for="@aparment.Comment" placeholder="Comment.."></textarea>
                                    <span asp-validation-for="@aparment.Comment" class="text-danger"></span>
                                </div>
                                <dt>Rate: </dt>
                                <div class="col-md-10">
                                    <input class="form-control" type="number" min="1" step="1" max="5" asp-for="@aparment.Rate" />
                                    <span asp-validation-for="@aparment.Rate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                            <div class="Search">
                                                @*<button type="submit" class="button">Submit</button>*@
                                                <button id="clearBtn" class="btn btn-primary" type="submit" style="margin-top:10px">Comment</button>
                                            </div>
                                    </div>
                                </div>
                            </form>
                        </dd>
                    }
                    <button id="clearBtn" class="btn btn-primary" style="margin-left:175px" onclick="window.location.href='https://pay.g2a.com/panel'">Pay</button>
                    @*<button id="clearBtn" class="btn btn-primary" style="margin-left:10px; margin-top:10px">Submit</button>*@
                    <button id="clearBtn" class="btn btn-primary" onclick="onBtnCl(@aparment.Id)" style="margin-left:10px">Cancel</button>
                    <br />
                    <hr />
                </div>
            }
        </dl>
    </div>
</div>


@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert-dev.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

    <script>

        function onBtnCl(id) {
            swal({
                title: "Confirmation required!",
                text: "Are you sure you want to remove the order?" /*+ button.attr("data-id") + "?"*/,
                //type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Yes, remove it!",
                cancelButtonText: "No"
            },
                function (isConfirm) {
                    if (isConfirm) {
                        $.ajax({
                            url: '/api/offers/' + id,
                            type: 'DELETE',
                            contentType: 'application/json; charset=utf-8',
                            success: function () {
                                var tmp = $("div[data-id=" + id + "]");
                                tmp.remove();
                                toastr.success("Offer has been removed");
                                table.ajax.reload();
                            },
                            error: function () {
                                toastr.error("Error removing offer");
                            }
                        });
                    }
                })
        }
    </script>
}

@section Styles{
    <link rel='stylesheet' type='text/css' href='https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.css' />
    <link rel='stylesheet' type='text/css' href='https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.css' />
}
