                    cancelButtonText: "No"
                },
                    function (isConfirm) {
                        if (isConfirm) {
                            $.ajax({
                                url: '/api/apartments-user/' + id,
                                type: 'DELETE',
                                contentType: 'application/json; charset=utf-8',
                                success: function () {
                                    var tmp = $("div[data-id=" + id + "]");
                                    tmp.remove();
                                    toastr.success("Offer has been removed");
                                    table.ajax.reload();
                                },
