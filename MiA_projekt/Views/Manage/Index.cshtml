@model IndexViewModel
@{
    ViewData["Title"] = "Manage your account";
}

<h2>@ViewData["Title"].</h2>
<p class="text-success">@ViewData["StatusMessage"]</p>

<div>
    <h4>Change your account settings</h4>
    <hr />
    <div class="hotel-description-div">
        <dl class="dl-horizontal">
            <dt>Password:</dt>
            <dd>
                @if (Model.HasPassword)
                {
                    <a asp-controller="Manage" asp-action="ChangePassword" class="btn-bracketed">Change</a>
                }
                else
                {
                    <a asp-controller="Manage" asp-action="SetPassword" class="btn-bracketed">Create</a>
                }
            </dd>
            <dt>Change address:</dt>
            <dd>
                <a asp-controller="Manage" asp-action="ChangeAddress" class="btn-bracketed">Change</a>
            </dd>
            <dt>Phone Number:</dt>
            <dd style="color:white">
                @(Model.PhoneNumber ?? "None")
                @if (Model.PhoneNumber != null)
                {
                    <br />
                    <a asp-controller="Manage" asp-action="AddPhoneNumber" class="btn-bracketed">Change</a>

                    @*<form asp-controller="Manage" asp-action="RemovePhoneNumber" method="post">
                        [<button type="submit" class="btn-link">Remove</button>]
                    </form>*@
                }
                else
                {
                    <a asp-controller="Manage" asp-action="AddPhoneNumber" class="btn-bracketed">Add</a>
                }
            </dd>
            @if (Model.IsHost)
            {
                @*<dt>Becoma a host: </dt>
                    <dd>
                        <a asp-controller="Manage" asp-action="ChangePassword" class="btn-bracketed">Change</a>
                    </dd>*@
                <dt>Add offer: </dt>
                <dd>
                    <a asp-controller="Manage" asp-action="AddApartment" class="btn-bracketed">Add</a>
                </dd>
            }
            else
            {
                @if (Model.Apply==false)
                 {
                     <dt>Become a host: </dt>
                     <dd>
                         <a asp-controller="Manage" asp-action="BecomeAhost" class="btn-bracketed">Apply</a>
                     </dd>
                 }
            }
            @*<dt>Add offer: </dt>
                <dd>
                    <a asp-controller="Manage" asp-action="AddApartment" class="btn-bracketed">Add</a>
                </dd>*@
        </dl>
    </div>
    
    @if (Model.IsAdmin)
    {
        <div class="hotel-description-div">
            <dl class="dl-horizontal">
                <dt>Users:</dt>
                <dd>
                    <a asp-controller="Admin" asp-action="Users" class="btn-bracketed">Manage</a>
                </dd>
                <dt>Adresses:</dt>
                <dd>
                    <a asp-controller="Manage" asp-action="SetPassword" class="btn-bracketed">Manage</a>
                </dd>
                <dt>Apartments:</dt>
                <dd>
                    <a asp-controller="Manage" asp-action="SetPassword" class="btn-bracketed">Manage</a>
                </dd>
            </dl>
        </div>
    }
</div>